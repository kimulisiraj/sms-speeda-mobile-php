{
    "name": "kimulisiraj/sms-speeda-mobile-php",
    "description": "Send SMS using speed mobile api",
    "keywords": [
        "kimulisiraj",
        "sms-speeda-mobile-php"
    ],
    "homepage": "https://github.com/kimulisiraj/sms-speeda-mobile-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Siraj Kimuli",
            "email": "pworld.designer@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Kimulisiraj\\SmsSpeedaMobile\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kimulisiraj\\SmsSpeedaMobile\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
